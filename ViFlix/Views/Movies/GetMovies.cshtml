@using ViFlix.Models
@model IList<Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<hr />

@{
    if (@Model.Count == 0)
    {
        <p>We don't have any movies yet.</p>
    }
    else
    {
        <table style="width: 100%">
            <thead>Customer</thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
            @foreach (Movie movie in @Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td><a href="movies/details/@movie.Id">@movie.Name</a></td>
                </tr>
            }

        </table>
    }
}

