@using ViFlix.DataAccess.Models
@model IList<Movie>

@{
    ViewBag.Title = "Movies";
}

<hr/>

@{
    if (@Model.Count == 0)
    {
        <p>We don't have any movies yet.</p>
    }
    else
    {
        <table style="width: 100%" class="table table-bordered table-hover">
            <tr>
                <th>Name</th>
                <th>Genre</th>
            </tr>
            @foreach (Movie movie in @Model)
            {
                <tr>
                    <td>@movie.Name</td>
                    <td>@movie.Genre</td>
                </tr>
            }

        </table>
    }
}

