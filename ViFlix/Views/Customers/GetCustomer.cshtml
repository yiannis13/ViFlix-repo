@using System.Globalization
@using ViFlix.DataAccess.Models
@model ViFlix.DataAccess.Models.Customer

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @{
        if (@Model.Birthday != null)
        {
            <li>Birth Date: @Model.Birthday.Value.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) </li>
        }
    }
    
</ul>

